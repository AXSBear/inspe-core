{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "types": ["node", "reflect-metadata", "jest"],
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "./lib",
    "tests"
  ]
}
